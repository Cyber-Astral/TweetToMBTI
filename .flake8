[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    venv,
    scraper/scraped_data,
    mbti_analyzer/reports,
    mbti_analyzer/images,
    logs

# E203: whitespace before ':' (与 black 冲突)
# W503: line break before binary operator (与 black 冲突)

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811